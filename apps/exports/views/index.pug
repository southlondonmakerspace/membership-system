extends /src/views/base.pug

block prepend title
	- title = 'Exports'

block contents
	.row
		.col-md-12
			+page_header('Create export')
	.row
		.col-md-8
			form(method='POST').form-horizontal
				+csrf

				+input('text', 'Description', 'description', { left: 3, right: 4, required: true })

				.form-group
					label(for='type').col-md-3.control-label Type
					.col-md-4
						select(name='type', id='type').form-control
							each exportType, exportId in exportTypes
								option(value=exportId)= exportType.name


				.col-md-4.col-md-offset-3
					button.btn Create export

	.row
		.col-md-12
			+page_header('Existing exports')

	each e in exports
		.row
			.col-md-12
				p
					a(href='/exports/' + e._id)= e.description
					| , created #{moment(e.date).format('DD/MM/YYYY [at] HH:mm')}



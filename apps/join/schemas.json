{
	"joinSchema": {
		"body": {
			"type": "object",
			"required": ["period", "amount"],
			"properties": {
				"period": {
					"type": "string",
					"enum": ["monthly", "annually"]
				}
			},
			"oneOf": [
				{
					"properties": {
						"amount": { "type": "integer", "minimum": 1 }
					}
				},
				{
					"properties": {
						"amount": { "const": "other" },
						"amountOther": { "type": "integer", "minimum": 1 }
					},
					"required": ["amountOther"]
				}
			]
		}
	},
	"referralSchema": {
		"body": {
			"type": "object",
			"required": ["referralCode", "referralGift"],
			"properties": {
				"referralCode": {
					"type": "string",
					"minLength": 1
				},
				"referralGift": {
					"type": "string"
				}
			}
		}
	},
	"completeSchema": {
		"query": {
			"type": "object",
			"required": ["redirect_flow_id"],
			"properties": {
				"redirect_flow_id": {
					"type": "string"
				}
			}
		}
	}
}

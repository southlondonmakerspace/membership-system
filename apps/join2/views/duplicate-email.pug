extends /src/views/base.pug

block prepend title
	- title = "Duplicate email address"

block contents
	+page_header( 'Duplicate email address' )
	.row
		.col-md-6
			p.
				This email address is already in use, this is probably because
				you were previously a member. We have been notified about this
				and will be in touch to resolve the issue.

			.alert.alert-warning.
				A contribution has not been set up, you will not be charged

			p.
				Alternatively, you can login to your account below. If you have
				never logged in before click "Forgot password" and you will
				receive an email with instructions to set a password.

	.row
		.col-md-4
			include /apps/login/views/partials/form.pug

	if error
		+page_header( 'Error' )
		pre #{ error }

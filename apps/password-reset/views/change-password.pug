extends /src/views/base.pug

block prepend title
	- title = 'Reset Password'
	- heading = title

block navbar

block append js
	script( src="/js/password-requirements.js" )

block append css
	link( rel="stylesheet", href="/css/password-requirements.css" )

block contents
	form( method="post", action="/password-reset/change-password" ).form-horizontal
		+csrf
		+input( 'text', 'Reset code', 'password_reset_code', { value: password_reset_code, readonly: ( password_reset_code ? true : false ) } )
		+input( 'password', 'Password', 'pw-req', { required: true, id: 'password', class: 'pw-req' } )
		+input( 'password', 'Verify password', 'pw-mat', { required: true, id: 'verify', class: 'pw-mat' } )
		+form_button( 'Change Password', 'primary' )

extends /src/views/base.pug

block prepend title
	- title = app.title

block contents
	.row
		.col-md-3
			- page = 'otp'
			include /apps/profile/views/partials/sidebar.pug
		.col-md-9
			+page_header( title )
			.row
				.col-md-7
					p Before you can activate two factor authentication you need to setup an authenticator app to generate one time passwords.
					p #[a( href="https://support.google.com/accounts/answer/1066447", target="_blank" ) Google Authenticator] is a free app available on both Android and iOS, however you can alternatively use #[a( href="https://authy.com/", target="_blank" ) Authy], or a password manager like #[a( href="https://1password.com/", target="_blank" ) 1Password] or #[a( href="https://www.lastpass.com/", target="_blank" ) LastPass].
					ol
						li You need to scan the QR code, or enter the code (below the QR code) into your chosen authenticator app.
						li Then enter the 6 digit code generated by your authenticator app below.
					hr
					form( method="post" )
						+csrf
						.form-group
							label( for=code ).control-label Code
							input( type='text', name='code', autocomplete="off" ).form-control#code
						.form-group
							button.btn.btn-primary Activate
							|  
							a( href="/profile/2fa" ).btn.btn-default Cancel
				.col-md-5
					.panel.panel-default
						.panel-body.text-center
							p: img( src=qr, title=secret )
							| #{ secret }

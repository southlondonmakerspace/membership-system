extends /src/views/base.pug

block prepend title
	- title = "Change password"

block append js
	+passwordRequirementsJS

block append css
	+passwordRequirementsCSS

block contents
	.row
		.col-md-3
			- page = 'change-password'
			include ../../../views/partials/sidebar.pug
		.col-md-9.col-lg-7
			+page_header( 'Change password' )
			form( method="post" ).form-horizontal
				+csrf
				+input( 'password', 'Current password', 'current', { required: true, left: 3, right: 5 } )
				+input( 'password', 'New password', 'new', { required: true, class: 'pw-req', left: 3, right: 5 } )
				+input( 'password', 'Confirm password', 'verify', { required: true, class: 'pw-mat', left: 3, right: 5 } )

				button.btn.join-btn Save

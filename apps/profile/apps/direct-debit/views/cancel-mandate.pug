extends /src/views/base.pug

block prepend title
	- title = 'Direct Debit'

block contents
	.row
		.col-md-3
			- page = 'direct-debit'
			include /apps/profile/views/partials/sidebar.pug
		.col-md-9
			+page_header( 'Cancel Direct Debit Mandate' )
			p Are you sure you want to cancel your Direct Debit mandate?
			form( method="post" )
				+csrf
				p
					button( role="button" ).btn.btn-danger Yes, Cancel Mandate
					| 
					a( href="/profile/direct-debit" ).btn.btn-default No

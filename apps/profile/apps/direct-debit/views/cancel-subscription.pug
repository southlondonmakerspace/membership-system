extends /src/views/base.pug

block prepend title
	- title = 'Direct Debit'

block contents
	.row
		.col-md-3
			- page = 'direct-debit'
			include /apps/profile/views/partials/sidebar.pug
		.col-md-9
			+page_header( 'Cancel Subscription' )
			p Are you sure you want to cancel your subscription?
				form( method="post" )
					+csrf
					p
						button( role="button").btn.btn-danger Yes, Cancel Subscription
						| 
						a( href="/profile/direct-debit" ).btn.btn-default No

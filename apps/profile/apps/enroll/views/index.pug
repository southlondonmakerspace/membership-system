extends /src/views/base.pug

block prepend title
	- title = app.title

block contents
	.row
		.col-md-3
			- page = 'tag'
			include /apps/profile/views/partials/sidebar.pug
		.col-md-9
			+page_header( title )
			p To complete the tag enrollment process please click Enroll below.
			form( method="post" action="/profile/enroll" ).form-horizontal
				+csrf
				+input( 'text', 'Code', 'enrollment_code', { value: enrollment_code, readonly: ( enrollment_code ? true : false ) } )
				+form_button( 'Enroll', 'primary' )

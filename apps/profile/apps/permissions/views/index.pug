extends /src/views/base.pug

block prepend title
	- title = app.title

block contents
	.row
		.col-md-3
			- page = 'permissions'
			include /apps/profile/views/partials/sidebar.pug
		.col-md-9
			+page_header( title )
			.list-group
				if permissions.length > 0
					each permission, p in permissions
						include /src/views/partials/permission.pug
				else
					+messageBlock( 'info', "You currently haven't been granted any permissions." )
